<div class="row text-center">
	<<h1>CREATE AND DEVOUR BURGERS!</h1>
</div>	

<div class="row">
	<img class="img-responsive center-block" id="burgerpic" src="../../public/assets/img/burger.png">
</div>
<div class="row text-center">
	<h2>EAT-DA-BURGER!</h2>
</div>
<div class = "row">
	<div class="col-md-6">
		<ul>
			{{#each burger}}
				{{unless devoured}}
					<li>
						{{burger_name}}
						<button class="change-devoured" data-id="{{id}}">DEVOUR</button>
					</li>
				{{/unless}}
			{{/each}}
		<ul>
	</div>

	<div class="col-md-6">
		<ul>
			{{#each burger}}
				{{if devoured}}
					<li>
						{{burger_name}}
					</li>
				{{/if}}
			{{/each}}
		<ul>
	</div>
</div>
<div class="row text-center">
	<div class="col-md-6 col-md-offset-3">
		<div class="row"> 
		</div>
			<textarea class="form-control" rows="3" id="burger_name" placeholder="Type burger name here"></textarea>
			<button type="button" class="btn btn-primary">Submit</button>
		</div>
</div>